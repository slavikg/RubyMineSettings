{
  "name": "rails-boilerplate",
  "scripts": {
    "postdeploy": "bin/update"
  },
  "env": {
    "LANG": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "HEROKU_APP_NAME": {
      "required": true
    },
    "HEROKU_PARENT_APP_NAME": {
      "required": true
    },
    "REDIS_PROVIDER": "REDISCLOUD_URL"
  },
  "addons": [
    "heroku-postgresql",
    "memcachier:dev",
    "logentries:le_tryit",
    "rollbar:free",
    "mailgun:starter",
    "rediscloud:30"
  ]
}